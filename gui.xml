<Window x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Language="de-de"
        Title="Remote-Assistant" WindowStartupLocation="CenterScreen" MinHeight="300" MinWidth="300" Height="500" Width="500" FontSize="16"
    >
    <DockPanel Margin="3">
        <GroupBox Header="Eingabe" DockPanel.Dock="Top">
            <ComboBox IsEditable="True" x:Name="Eingabefeld"/>
        </GroupBox>
        <GroupBox Header="Funktionen" DockPanel.Dock="Left">
            <StackPanel>
                <Button Margin="0,2" Content="Funktion 1" x:Name="Knopf1"/>
                <Button Margin="0,2" Content="Funktion 2" x:Name="Knopf2"/>
                <Separator/>
                <Button Margin="0,2" Content="Funktion 3" x:Name="Knopf3"/>
                <Button Margin="0,2" Content="Funktion 4" x:Name="Knopf4"/>
                <Separator Margin="0,2"/>
                <Button Margin="0,2" Content="Funktion 5" x:Name="Knopf5"/>
                <Button Margin="0,2" Content="Funktion 6" x:Name="Knopf6"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Ausgabe">
            <TextBox IsReadOnly="True" x:Name="Ausgabefeld"/>
        </GroupBox>
    </DockPanel>
</Window>